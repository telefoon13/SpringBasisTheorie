<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns='http://www.springframework.org/schema/beans'
       xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
       xsi:schemaLocation='http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd'>

    <bean id='classA' class='be.vdab.classes.ClassA'>
        <property name="telefoonNrHelpDesk" value="01/234.56.78"/>
        <property name="koersenURL" value="http://www.ecb.europa.eu/stats/eurofxref/eurofxref-daily.xml"/>
        <property name="defaultTaalEnLand" value="nl_BE"/>
        <property name="importData" value="file:c:/data/postcodes.txt"/>
        <property name="defaultBladRichting" value="LIGGEND"/>
        <property name="emailAdres" value="SpringIntVeld@vdab.be"/>
        <property name="websiteGestart" value="2008-07-01"/>
    </bean>

    <bean id='classB' class='be.vdab.classes.ClassB'>
        <constructor-arg name="telefoonNrHelpDesk" value="01/234.56.78"/>
        <constructor-arg name="aantalPogingenUpdateKlant" value="3"/>
    </bean>

    <bean id="HelpDeskMedewerkers" class="be.vdab.classes.HelpDeskMedewerkers">
        <constructor-arg>
            <props>
                <prop key="Joe">123</prop>
                <prop key="Jack">456</prop>
                <prop key="William">789</prop>
                <prop key="Mike">11</prop>
            </props>
        </constructor-arg>
    </bean>

    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <list>
                <bean class="be.vdab.converters.StringToDateConverter"/>
            </list>
        </property>
    </bean>

    <bean id="teller1" class="be.vdab.classes.Teller"/>
    <bean id="teller2" class="be.vdab.classes.Teller" scope="prototype"/>

    <import resource="restclients.xml"/>
    <import resource="services.xml"/>
</beans>